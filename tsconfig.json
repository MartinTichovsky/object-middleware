{
  "compilerOptions": {
    "alwaysStrict": true,
    "declaration": true,
    "lib": ["dom", "es2020"],
    "module": "es2020",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "stripInternal": true,
    "strictNullChecks": true,
    "target": "es2020",
    "types": ["jest"],
    "rootDir": "src"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
